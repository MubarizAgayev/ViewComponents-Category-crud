@model IEnumerable<Product>

@foreach (var product in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="product-item text-center" data-id="@product.CategoryId">
            <div class="img">
                <a href="">
                    <img src="~/img/@product.Images.FirstOrDefault(m=>m.IsMain)?.Image" class="img-fluid" alt="">
                </a>
            </div>
            <div class="title mt-3">
                <h6>@product.Name</h6>
            </div>
            <div class="price">
                <form method="post">
                    <button class="btn btn-primary add-to-cart-button" data-id="@product.Id">Add to card</button>
                </form>
                <span class="text-black-50">$@product.Price</span>
            </div>
        </div>
    </div>
}